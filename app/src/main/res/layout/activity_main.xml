<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Shake to Get a Random Number" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/tvHelp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot Numbers"
        android:id="@+id/tvInfo"
        android:layout_below="@+id/tvHelp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etRanNum"
        android:layout_below="@+id/tvInfo"
        android:layout_alignRight="@+id/tvHelp"
        android:layout_alignEnd="@+id/tvHelp"
        android:layout_alignLeft="@+id/tvHelp"
        android:layout_alignStart="@+id/tvHelp"
        android:text="00 00 00 00 00"
        android:textSize="30dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HotBall Number"
        android:id="@+id/tvHot"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/etRanNum"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etRandNumb"
        android:layout_below="@+id/tvHot"
        android:layout_alignRight="@+id/etRanNum"
        android:layout_alignEnd="@+id/etRanNum"
        android:layout_alignLeft="@+id/etRanNum"
        android:layout_alignStart="@+id/etRanNum"
        android:text="00"
        android:textSize="30dp"
        android:gravity="center_horizontal" />

</RelativeLayout>
